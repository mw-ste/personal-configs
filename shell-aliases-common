# Command Line Shortcuts
alias cd..='cd ..'
alias cl='clear'
alias ls='ls --color=auto'
alias ll='ls -lv --group-directories-first --color=auto'
alias la='ls -lAv --group-directories-first --color=auto'

# Power Aliases
alias poweroff='sudo poweroff'
alias reboot='sudo reboot'

# Git Aliases
alias pull='git pull'
alias push='git push origin master'

# Program Aliases
alias facebook='firefox -private-window www.facebook.com &'
alias stopx='xfce4-session-logout --logout'

# Network Aliases
alias nm-show='nmcli device wifi'
alias nm-list='nmcli connection show'
alias nm-connect='nmcli -p connection up'
alias nm-add='nmcli device wifi connect'
